{
  "manifest_version": 3,
  "name": "Cinefill",
  "version": "1.2.0",
  "description": "Remove letterbox bars and fill your ultrawide screen on streaming services",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "*://*.max.com/*",
    "*://*.hbomax.com/*",
    "*://*.netflix.com/*",
    "*://*.disneyplus.com/*",
    "*://*.primevideo.com/*",
    "*://*.amazon.com/*",
    "*://*.tv.apple.com/*",
    "*://*.hulu.com/*",
    "*://*.paramountplus.com/*",
    "*://*.peacocktv.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.max.com/*",
        "*://*.hbomax.com/*",
        "*://*.netflix.com/*",
        "*://*.disneyplus.com/*",
        "*://*.primevideo.com/*",
        "*://*.amazon.com/*",
        "*://*.tv.apple.com/*",
        "*://*.hulu.com/*",
        "*://*.paramountplus.com/*",
        "*://*.peacocktv.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
